<div class="container">
  <div class="d-flex justify-content-between mt-4">
    <h1>Meus serviços</h1>

    <button class= "btn-service"><%= link_to "Criar serviço", new_service_path, style:"color:white; text-decoration:none;" %></button>
  </div>

  <% if @services.empty? %>
    <h2>Você ainda não criou nenhum serviço</h2>
  <% else %>
    <div class="cards container mt-3">
      <div class="row">
        <div class="col-0 col-lg-3"></div>
        <% @services.each do |service| %>
          <div class="card-service col-12 col-lg-6 p-4 mt-3">
            <h3 class="m-3 name"><strong style="color:black;">Nome:</strong> <%= service.nome %></h3>
            <h3 class="m-3 category"><strong style="color:black;">Categoria:</strong> <%= service.category.nome %></h3>
            <h3 class="m-3 price"><strong style="color:black;">Preço/hora:</strong> <%= service.preço %></h3>
            <div class="d-flex justify-content-around p-2 buttons-service">
            <button class= "btn-edit-service"><%= link_to "Editar serviço", new_service_path, style:"color:white; text-decoration:none;" %></button>
            <button class= "btn-destroy-service"><%= link_to "Deletar serviço", new_service_path, style:"color:white; text-decoration:none;" %></button>
            </div>
          </div>
        <% end %>
        <div class="col-0 col-lg-3"></div>
      </div>
    </div>
  <% end %>
</div>

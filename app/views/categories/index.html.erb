<div class="banner d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner.jpg" %>'); height:80vh;">
  <div class="container">
    <h1>Encontre os <strong>serviços</strong> que você precisa!</h1>
    <p>Fácil, rápido e seguro.</p>
    <a class="btn btn-primary" href="#">Apply now</a>
  </div>
</div>
<div class="container">
  <h2 class="mt-3">Todas as categorias de serviços</h2>
  <div class="row">
    <% @records.each do |categoria| %>
      <div class="col-12 col-lg-3">
        <div class="classWithPad card-category my-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= categoria.image_url%>)">
          <h3><%= categoria.nome %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex align-items-center justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
